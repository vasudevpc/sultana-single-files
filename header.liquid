{% comment %}
Testing Cypress integration
{% endcomment %}

{{ 'component-mobile-menu.min.css' | asset_url | stylesheet_tag: preload: true }}

{% assign overlay_opacity = section.settings.overlay_opacity | divided_by: 100.0 %}
{% assign overlay_bg_color = settings.header-transparent-background %}
{% assign opaque_color = overlay_bg_color | color_modify: 'alpha', overlay_opacity %}
{% assign overlay = false %}
{% assign mega_menu_block = section.blocks | where: 'type', 'content' | first %}

{% assign homepage-overlay = false %}
{% if section.settings.overlay_header_homepage and template == 'index' %}
  {% assign homepage-overlay = true %}
{% endif %}

{% assign collection-overlay = false %}
{% if section.settings.overlay_header_collection and template.name == 'collection' %}
  {% assign collection-overlay = true %}
{% endif %}

{% assign list-collection-overlay = false %}
{% if section.settings.overlay_header_list_collection and template == 'list-collections' %}
  {% assign list-collection-overlay = true %}
{% endif %}

{% assign contact-overlay = false %}
{% if section.settings.overlay_header_contact and template == 'page.contact' %}
  {% assign contact-overlay = true %}
{% endif %}

{% if homepage-overlay
  or collection-overlay
  or list-collection-overlay
  or contact-overlay
%}
  {% assign overlay = true %}
{% endif %}

{% capture locale %}
  {% render 'localization-form', show_locale_selector: section.settings.show_locale_selector, show_currency_selector: section.settings.show_currency_selector %}
{% endcapture %}

{% assign menu_size = linklists[section.settings.main_linklist] | size %}
{% if menu_size == 0 %}
  {% assign site_nav = blank %}
{% else %}
  {% capture site_nav %}
    <div role="navigation" class="js site-header__nav top-links" id="top_links_wrapper">
      <ul class="site-nav nav-link-animated {% if mega_menu_block %} mega-menu-wrapper{% endif %}" id="AccessibleNav">
        {% render 'nav--main', mega_menu: mega_menu_block, logo_position: section.settings.logo-placement %}
      </ul>
    </div>
    <noscript>
      {% assign menu = linklists[section.settings.main_linklist] %}
      {% render 'noscript-menu', menu: menu %}
    </noscript>
  {% endcapture %}
{% endif %}

{% assign menu_size_right = linklists[section.settings.main_linklist_right] | size %}
{% if menu_size_right == 0 %}
  {% assign site_nav_right = blank %}
{% else %}
  
  {% capture site_nav_right %}
    <div class="js site-header__nav top-links" id="top_links_wrapper_right">
      <ul class="site-nav nav-link-animated right-menu-test {% if mega_menu_block %} mega-menu-wrapper{% endif %}" id="HeaderRightMenus" role="navigation">
        {% render 'nav-main-right', mega_menu: mega_menu_block, logo_position: section.settings.logo-placement %}
      </ul>
    </div>
    <noscript>
      {% assign menu = linklists[section.settings.main_linklist_right] %}
      {% render 'noscript-menu', menu: menu %}
    </noscript>
  {% endcapture %}
{% endif %}

{% capture top_links %}
  <ul class="site-header__links top-links--icon-links">
    {% if section.settings.enable_search %}
      <li>
        <a href="{{ routes.search_url }}" class="search-button standalone-icon--wrapper" aria-label="{{ 'layout.header.search' | t }}">
          {% if section.settings.show_icons %}
            {% render 'theme-icon' with icon: 'search', iconSize: 20 %}
          {% else %}
            <span class="header--supporting-text">{{ 'layout.header.search' | t }}</span>
          {% endif %}
        </a>
      </li>
    {% endif %}

    {% if shop.customer_accounts_enabled %}
      {% if customer %}
        <li>
          <a href="{{ routes.account_url }}" title="{{ 'layout.customer.account' | t }}" class="account-button standalone-icon--wrapper">
            {% if section.settings.show_icons %}
              {% render 'theme-icon' with icon: 'user', iconSize: 20 %}
            {% else %}
              <span class="header--supporting-text">{{ 'layout.header.account' | t }}</span>
            {% endif %}
          </a>
        </li>
      {% else %}
        <li>
          <a href="{{ routes.account_login_url }}" aria-label="{{ 'layout.customer.log_in' | t }}" class="log-in-button standalone-icon--wrapper">
            {% if section.settings.show_icons %}
              {% render 'theme-icon' with icon: 'user', iconSize: 20 %}
            {% else %}
              <span class="header--supporting-text">{{ 'layout.header.account' | t }}</span>
            {% endif %}
          </a>
        </li>
      {% endif %}
    {% endif %}

    <li>
      <a href="#swym-wishlist" class="wishlist-header">
        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" width="24" height="24">
          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41 1.01 4.5 2.09C13.09 4.01 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" stroke="currentColor" stroke-width="1.5" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <!-- <img height="" width="" src="{{ 'wishlist-icon2.svg' | asset_url }}" alt="Logo" /> -->
      </a>
    </li>
    
    <li>
      <a 
        href="{{ routes.cart_url }}" 
        class="site-header__cart-toggle{% if settings.cart_type == "drawer" %} js-drawer-open-right-link{% endif %}{% if section.settings.cart_count %} cart-count-enabled {{ section.settings.cart-style }}{% endif %}{% if cart.item_count > 0 %} cart-count-visible{% endif %} standalone-icon--wrapper{% if section.settings.show_icons %} header-icons-enabled{% endif %}"
        aria-controls="CartDrawer" 
        aria-expanded="false" 
        aria-label="{{ 'layout.header.your_cart' | t }}"
      >
        {% if section.settings.show_icons %}
          {% render 'theme-icon' with icon: section.settings.cart-style %}
          {% if section.settings.cart_count %}                                                                                                                                          
              <span 
                data-cart-count-indicator
                class="cart-item-count-bubble cart-item-count-header cart-item-count-header--quantity{% if cart.item_count == 0 %} hide{% endif %}"
              >
                {{ cart.item_count }}
              </span>
          {% endif %}
        {% else %}
          <span class="header--supporting-text">
            {{ 'layout.header.your_cart' | t }}
            {% if section.settings.cart_count %}
                <span 
                  data-cart-count-indicator
                  class="cart-item-count-header cart-item-count-header--has-label cart-item-count-header--quantity{% if cart.item_count == 0 %} hide{% endif %}"
                >
                  {{ cart.item_count }}
                </span>
            {% endif %}
          </span>
        {% endif %}
      </a>
    </li>
  </ul>
{% endcapture %}

<noscript>
  {% assign menu = linklists[section.settings.main_linklist] %}
  {% render 'noscript-menu', menu: menu, class: 'no-js-mobile-menu' %}
</noscript>

{% style %}
  .default-menu-drawer-text-color {
    color: var(--menu-drawer-text-color);
  }

  {% if section.settings.show_locale_selector or section.settings.show_currency_selector %}
    .locale--mobile {
      padding: 15px;
    }
  {% endif %}
{% endstyle %}

<div
  class="header-section--wrapper
    {%- if collection-overlay or homepage-overlay or list-collection-overlay or contact-overlay %} overlay-header-wrapper{% endif -%}
    {%- if collection.image %} collection-image-enabled{% endif -%}
  "
  data-wetheme-section-type="header"
  data-wetheme-section-id="{{ section.id }}"
  data-header-sticky="{{ section.settings.sticky_header }}"
  data-header-overlay="{{ overlay }}"
>
  <div id="NavDrawerOverlay" class="drawer-overlay"></div>
  <div id="NavDrawer" class="drawer drawer--left">

    <div class="mobile-nav-grid-container">
      <div class="mobile-nav__logo-title">
        <div class="mobile-nav__logo-title--inner mob-custom-logo">
          <a class="site-header__logo-link" href="{{ routes.root_url }}" itemprop="url">
            <img height="" width="" src="{{ 'sultana-logo.png' | asset_url }}" alt="Logo" />
          </a>
        </div>
      </div>


      <!-- begin mobile-nav -->
      <ul class="mobile-nav mobile-nav--main">
        {% assign menu = linklists[section.settings.main_linklist] %}
        {% comment %} {% assign right_menu = linklists[section.settings.main_linklist_right] %}
        {% assign combined_links = menu.links | concat: right_menu.links %} {% endcomment %}
        
        {% for link in menu.links %}
          {% liquid 
            assign link-title = link.title | strip | downcase
            assign is-mega-menu = false

            assign show_first_promo_image = false
            assign show_second_promo_image = false
  
            for block in section.blocks
              if block.settings.show_promo_1_in_mobile_drawer == true and block.settings.mega_image_1
                assign show_first_promo_image = true
              endif

              if block.settings.show_promo_2_in_mobile_drawer == true and block.settings.mega_image_2
                assign show_second_promo_image = true
              endif

              assign block-title = block.settings.mega-menu | strip | downcase
              if block-title == link-title
                if show_first_promo_image == true or show_second_promo_image == true
                  assign is-mega-menu = true
                endif
              endif
            endfor
          %}
          {% if link.links != blank %}
            <li class="mob-top-level-menu mobile-nav__item top-level{% if link.active %} mobile-nav__item--active{% endif %}{% if is-mega-menu %} mega-menu--mobile{% endif %}" aria-haspopup="true">
              <div class="mobile-nav__has-sublist">
                <a href="{{ link.url }}" class="mobile-nav__link {{ link.handle }}">{{ link.title }}</a>
                <div class="mobile-nav__toggle">
                  <button type="button" class="icon-fallback-text mobile-nav__toggle-open standalone-icon--wrapper touch-target icon-no-padding" aria-label="{{ 'cart.general.see_more' | t }}">
                    {% render 'theme-icon', icon: 'chevron_right', iconSize: 16, iconAttributes: 'aria-hidden="true"' %}
                  </button>
                  {% comment %}
                    <button type="button" class="icon-fallback-text mobile-nav__toggle-close standalone-icon--wrapper touch-target icon-no-padding" aria-label="{{ 'layout.drawers.close_menu' | t }}">
                      {% render 'theme-icon', icon: 'chevron_up', iconSize: 16, iconAttributes: 'aria-hidden="true"' %}
                    </button>
                  {% endcomment %}                  
                </div>
              </div>
              <ul class="mobile-nav__sublist custom-submenu">
                <li class="submenu-title">
                  <button type="button" class="close-submenu" aria-label="{{ 'layout.drawers.close_menu' | t }}">
                    {% render 'theme-icon', icon: 'chevron_left', iconSize: 20, iconAttributes: 'aria-hidden="true"' %}
                  </button>
                  <span>{{ link.title }}</span>
                </li>
                {% for sub_link in link.links %}
                  {% if sub_link.levels > 0 %}
                    <li class="mobile-nav__item{% if sub_link.active %} mobile-nav__item--active{% endif %}">
                      <div class="mobile-nav__has-sublist third-level-mobile-nav">
                        <a href="{{ sub_link.url }}" class="mobile-nav__link">{{ sub_link.title | escape }}</a>
                        <div class="mobile-nav__toggle">
                          <button type="button" class="third-level-menu-open icon-fallback-text mobile-nav__toggle-open standalone-icon--wrapper touch-target icon-no-padding" name="{{ 'cart.general.see_more' | t }}">
                            {% render 'theme-icon', icon: 'chevron_right', iconSize: 16, iconAttributes: 'aria-hidden="true"' %}
                            <span class="fallback-text">{{ 'cart.general.see_more' | t }}</span>
                          </button>
                        </div>
                      </div>
                      <ul class="mobile-nav__sublist submenu-level-third">
                        <li class="submenu-title">
                          <button type="button" class="close-submenu level-third-menu" name="{{ 'layout.drawers.close_menu' | t }}">
                            {% render 'theme-icon', icon: 'chevron_left', iconSize: 20, iconAttributes: 'aria-hidden="true"' %}
                            <span class="fallback-text">{{ 'layout.drawers.close_menu' | t }}</span>
                          </button>
                          <span>{{ sub_link.title }}</span>
                        </li>                        
                        {% for sub_sub_link in sub_link.links %}
                          <li class="mobile-nav__item">
                            <a href="{{ sub_sub_link.url }}" class="mobile-nav__link">{{ sub_sub_link.title | escape }}</a>
                          </li>
                        {% endfor %}
                      </ul>
                    </li>
                  {% else %}
                    <li class="mobile-nav__item{% if sub_link.active %} mobile-nav__item--active{% endif %}">
                      <a href="{{ sub_link.url }}" class="mobile-nav__link">{{ sub_link.title | escape }}</a>
                    </li>
                  {% endif %}
                {% endfor %}

                {% if is-mega-menu %}
                  <ul class="mobile-promo--block">
                    {% for block in section.blocks %}
  
                      {% liquid
                        assign link-title = link.title | strip | downcase
                        assign block-title = block.settings.mega-menu | strip | downcase

                        assign image_2_stretch = false
                        assign crop_setting_2 = block.settings.image_2_aspect_ratio
                        if crop_setting_2 == "square"
                          assign image_2_crop = "aspect-ratio--square"
                          assign image_2_stretch = true
                        elsif crop_setting_2 == "tall"
                          assign image_2_crop = "aspect-ratio--tall"
                          assign image_2_stretch = true
                        elsif crop_setting_2 == "wide"
                          assign image_2_crop = "aspect-ratio--wide"
                          assign image_2_stretch = true
                        else
                          assign image_2_crop = false
                          assign image_2_stretch = false
                        endif

                        assign first_promo_has_text = false
                        if block.settings.mega_image_header_1 != blank or block.settings.mega_image_subheader_1 != blank
                          assign first_promo_has_text = true
                        endif

                        assign second_promo_has_text = false
                        if block.settings.mega_image_header_2 != blank or block.settings.mega_image_subheader_2 != blank
                          assign second_promo_has_text = true
                        endif
                      %}

                      {% style %}
                        .block-id-{{ block.id }} .overlay-text-on-image-promo-1 {
                          color: {{ block.settings.overlay_text_color_promo_1 }} !important;
                        }

                        .block-id-{{ block.id }} .overlay-text-on-image-promo-2 {
                          color: {{ block.settings.overlay_text_color_promo_2 }} !important;
                        }
                      {% endstyle %}
  
                      {% if link-title == block-title %}
                        {% if block.settings.mega_image_1 and block.settings.show_promo_1_in_mobile_drawer %}
                          {% render 'mega-menu-promo-card' with 
                            promo_wrapper_classes: "mobile-nav__item",
                            promo_block_id: block.id,
                            promo_img: block.settings.mega_image_1,
                            promo_img_crop: block.settings.image_1_aspect_ratio,
                            promo_text_overlay: block.settings.overlay_text_on_image_promo_1,
                            promo_text_heading: block.settings.mega_image_header_1,
                            promo_text_subheading: block.settings.mega_image_subheader_1,
                            promo_text_color: block.settings.overlay_text_color_promo_1,
                            promo_link: block.settings.mega_image_link_1
                          %}
                        {% endif %}
                          
                        {% if block.settings.mega_image_2 and block.settings.show_promo_2_in_mobile_drawer %}
                          {% render 'mega-menu-promo-card' with 
                            promo_wrapper_classes: "mobile-nav__item",
                            promo_block_id: block.id,
                            promo_img: block.settings.mega_image_2,
                            promo_img_crop: block.settings.image_2_aspect_ratio,
                            promo_text_overlay: block.settings.overlay_text_on_image_promo_2,
                            promo_text_heading: block.settings.mega_image_header_2,
                            promo_text_subheading: block.settings.mega_image_subheader_2,
                            promo_text_color: block.settings.overlay_text_color_promo_2,
                            promo_link: block.settings.mega_image_link_2
                          %}
                        {% endif %}
                      {% endif %}
                    {% endfor %}
                  </ul>
                {% endif %}
              </ul>
            </li>
          {% else %}
            
            <li class="mob-top-level-menu mobile-nav__item top-level{% if link.active %} mobile-nav__item--active{% endif %}{% if is-mega-menu %} mega-menu--mobile no-links{% endif %}">

              {% if is-mega-menu %}
                
                <div class="mobile-nav__has-sublist">
                  <a href="{{ link.url }}" class="mobile-nav__link">{{ link.title }}</a>
                  <div class="mobile-nav__toggle">
                    <button type="button" class="icon-fallback-text mobile-nav__toggle-open standalone-icon--wrapper touch-target icon-no-padding" aria-label="{{ 'cart.general.see_more' | t }}">
                      {% render 'theme-icon', icon: 'chevron_right', iconSize: 16, iconAttributes: 'aria-hidden="true"' %}
                    </button>
                    {% comment %}
                      <button type="button" class="icon-fallback-text mobile-nav__toggle-close standalone-icon--wrapper touch-target icon-no-padding" aria-label="{{ 'layout.drawers.close_menu' | t }}">
                        {% render 'theme-icon', icon: 'chevron_up', iconSize: 16, iconAttributes: 'aria-hidden="true"' %}
                      </button>
                    {% endcomment %}
                  </div>
                </div>

                <ul class="mobile-nav__sublist custom-mega-menu custom-submenu">
                  {% if section.settings.featured_collection %}
                    <li class="submenu-title">
                      <button type="button" class="close-submenu" aria-label="{{ 'layout.drawers.close_menu' | t }}">
                        {% render 'theme-icon', icon: 'chevron_left', iconSize: 20, iconAttributes: 'aria-hidden="true"' %}
                      </button>
                      <span>{{ link.title }}</span>
                    </li>
                    {% for collection in section.settings.featured_collection %}
                      <li class="mobile-nav__item">
                        <div class="mobile-nav__has-sublist tags-sublist">
                          <a href="{{ collection.url }}" class="mobile-nav__link">{{ collection.title | escape }}</a>

                          {% if collection.products.size > 0 %}
                            <div class="mobile-nav__toggle show-tags">
                              <button type="button" class="icon-fallback-text mobile-nav__toggle-open standalone-icon--wrapper touch-target icon-no-padding" name="{{ 'cart.general.see_more' | t }}">
                                {% render 'theme-icon', icon: 'plus', iconSize: 16, iconAttributes: 'aria-hidden="true"' %}
                                <span class="fallback-text">{{ 'cart.general.see_more' | t }}</span>
                              </button>
                              <button type="button" class="icon-fallback-text mobile-nav__toggle-close standalone-icon--wrapper touch-target icon-no-padding" name="{{ 'layout.drawers.close_menu' | t }}">
                                {% render 'theme-icon', icon: 'minus', iconSize: 16, iconAttributes: 'aria-hidden="true"' %}
                                <span class="fallback-text">{{ 'layout.drawers.close_menu' | t }}</span>
                              </button>
                            </div>
                          {% endif %}
                        </div>
  
                         {% if collection %}
                          {% assign all_tags = '' %}
                           {% if collection.products.size > 0 %}
                            <ul class="mobile-nav__sublist_custom custom-tags-list" style="display:none;">

                              {% comment %}
                              {% for product in collection.products %}
                                {% for tag in product.tags %}
                                  {% unless all_tags contains tag %}
                                    {% assign all_tags = all_tags | append: tag | append: ',' %}
                                  {% endunless %}
                                {% endfor %}
                              {% endfor %}
                              {% endcomment %}
                              
                              {% for product in collection.products %}
                                {% for tag in product.tags %}
                                  {% unless all_tags contains tag %}
                                    {% assign tag = tag | capitalize %}
                                    {% assign all_tags = all_tags | append: tag | append: ',' %}
                                  {% endunless %}
                                {% endfor %}
                              {% endfor %}

                              {% assign all_tags = all_tags | split: ',' %}
                              {% assign tag_map = "" %}
                              {% for tag in all_tags %}
                                {% assign lowercased_tag = tag | downcase %}
                                 {% assign tag_map = tag_map | append: lowercased_tag | append: ":" | append: tag | append: "|" %}
                              {% endfor %}
            
                              {% assign tag_map = tag_map | split: "|" | sort %}  

                              <!-- New Code -->
                              {% for tag in all_tags %}
                                {% if tag != '' %}
                                    <li class="mobile-nav__item">
                                      <a href="/collections/{{ collection.handle }}/?filter.p.tag={{ tag }}" class="mobile-nav__link">{{ tag }}</a>
                                    </li>
                                {% endif %}
                              {% endfor %}
                               <!-- New Code END -->                             

                              {% comment %}
                              {% if tag_map.size > 0 %}
                                    {% for tag in tag_map %}
                                      {% if tag != '' %}
                                        {% assign tag_val = tag | split: ":" %}
                                          <li class="mobile-nav__item">
                                            <a href="/collections/{{ collection.handle }}/?filter.p.tag={{ tag_val[1] }}" class="mobile-nav__link">{{ tag_val[0] }}</a>
                                          </li>
                                      {% endif %}
                                    {% endfor %}
                              {% endif %}  
                              {% endcomment %}
                              
                          {% comment %}
                              {% assign all_tags_array = all_tags | split: ',' | uniq %}
                              {% for tag in all_tags_array %}
                                {% if tag != '' %}
                                  <li class="mobile-nav__item">
                                    <a href="/collections/{{ collection.handle }}/?filter.p.tag={{ tag }}" class="mobile-nav__link">{{ tag | capitalize }}</a>
                                  </li>
                                {% endif %}
                              {% endfor %}
                            {% endcomment %}
                              
                            </ul>
                           {% endif %}
                          {% endif %}
                      </li>
                    {% endfor %}
                  {% endif %}
                </ul>
                
              {% else %}
                <div class="mobile-nav__has-sublist">
                  <a href="{{ link.url }}" class="mobile-nav__link">{{ link.title }}</a>
                </div>
              {% endif %}
            </li>
          {% endif %}
        {% endfor %}
      </ul>


                                      
      <div class="mobile-nav--footer">
        <div class="mobile-nav locale--mobile">
          {{ locale }}
        </div>

        {% comment %}
          If customer accounts are enabled, provide login and create account links
        {% endcomment %}
        {% liquid 
          assign social_icons = false
          if settings.sm_facebook_link != blank or settings.sm_x_link != blank or settings.sm_youtube_link != blank or settings.sm_flickr_link != blank or settings.sm_pinterest_link != blank or settings.sm_instagram_link != blank or settings.sm_tumblr_link != blank or settings.sm_pinterest_link != blank or settings.sm_youtube_link != blank or settings.sm_vimeo_link != blank or settings.sm_flickr_link != blank or settings.sm_snapchat_link != blank or settings.sm_houzz_link != blank or settings.sm_linkedin_link != blank or settings.sm_tiktok_link != blank
            assign social_icons = true
          endif
        %}
        {% style %}
          .mobile-nav.nav--meta {
            display: grid;
            gap: 15px;
          }

          .mobile-nav.nav--meta .mobile-nav__item.customer--info,
          .mobile-nav.nav--meta .mobile-nav__item.customer-logout-link,
          .mobile-nav.nav--meta .mobile-nav__item.customer-login-link,
          .mobile-nav.nav--meta .mobile-nav__item.sm-icons--wrapper {
            display: flex;
            flex-wrap: wrap;
          }

          .mobile-nav.nav--meta .mobile-nav__item.sm-icons--wrapper #sm-icons {
            width: 100%;
          }

          {% if shop.customer_accounts_enabled and social_icons %}
            .mobile-nav.nav--meta .mobile-nav__social-icons {
              justify-content: end;
            }

            {% if customer %}
              .mobile-nav.nav--meta {
                grid-template-columns: 1fr 1fr;
                grid-template-rows: repeat(2, minmax(0, auto));
                align-items: center;
              }

              .mobile-nav.nav--meta .mobile-nav__item.customer--info {
                grid-column-start: 1;
                grid-column-end: 3;
                grid-row-start: 1;
                grid-row-end: 2;
              }

              .mobile-nav.nav--meta .mobile-nav__item.customer-logout-link {
                grid-column-start: 1;
                grid-column-end: 2;
                grid-row-start: 2;
                grid-row-end: 3;
              }

              .mobile-nav.nav--meta .mobile-nav__item.sm-icons--wrapper {
                grid-column-start: 2;
                grid-column-end: 3;
                grid-row-start: 2;
                grid-row-end: 3;
              }
            {% else %}
              .mobile-nav.nav--meta {
                grid-template-columns: 1fr 1fr;
              }

              .mobile-nav.nav--meta .mobile-nav__item.customer-login-link {
                grid-column-start: 1;
                grid-column-end: 2;
              }

              .mobile-nav.nav--meta .mobile-nav__item.sm-icons--wrapper {
                grid-column-start: 2;
                grid-column-end: 3;
              }
            {% endif %}
          {% elsif shop.customer_accounts_enabled and social_icons == false %}
            {% if customer %}
              .mobile-nav.nav--meta {
                grid-template-columns: 1fr;
                grid-template-rows: repeat(2, minmax(0, auto));
              }

              .mobile-nav.nav--meta .mobile-nav__item.customer--info {
                grid-column-start: 1;
                grid-column-end: 2;
                grid-row-start: 1;
                grid-row-end: 2;
              }

              .mobile-nav.nav--meta .mobile-nav__item.customer-logout-link {
