<script>
  
  jQuery(function(){

    function customAnimateFunction($el,opacity,margin,delay){
        jQuery($el).each(function(index) {
            jQuery(this).delay(delay * index).animate({
                opacity: opacity,
                marginLeft: margin
            }, 600);
        });
    }     



     jQuery('.level-third-menu').click(function(e) {
       e.preventDefault();
       
       let element = jQuery(this).closest('.custom-submenu').find('li');
       customAnimateFunction(element,0,-20,200);
       // jQuery(this).closest('.mob-top-level-menu').find('.mobile-nav__has-sublist:not(.third-level-mobile-nav)').addClass('mobile-nav--expanded-new');
       
       // jQuery(this).closest('li.mobile-nav__item').find('.mobile-nav__has-sublist').removeClass('mobile-nav--expanded');
       // let element2 = jQuery(this).closest('.mob-top-level-menu').find('.custom-submenu > li');
       // customAnimateFunction(element2,1,0,200);
       // console.log(jQuery(this).closest('li.mobile-nav__item').find('.mobile-nav__has-sublist'));
     });
    
    
     jQuery('.third-level-menu-open').click(function(e) {
       e.preventDefault();
       
       let element = jQuery(this).closest('.mobile-nav__item').find('.submenu-level-third > li')
       customAnimateFunction(element,1,0,200);
    
     });    

      jQuery('.show-tags > .mobile-nav__toggle-open').click(function() {
          jQuery('.mobile-nav__sublist_custom').not(jQuery(this).closest('li').find('.mobile-nav__sublist_custom')).slideUp('slow');
          jQuery('.tags-sublist').not(jQuery(this).closest('.tags-sublist')).removeClass('mobile-nav--expanded');
          jQuery(this).closest('li').find('.mobile-nav__sublist_custom').slideDown('slow');
      });

      jQuery('.show-tags > .mobile-nav__toggle-close').click(function() {
          jQuery(this).closest('li').find('.mobile-nav__sublist_custom').slideUp('slow');
      });

    
    
    jQuery(document).on('click','.close-submenu',function(){
      jQuery(this).closest('.mob-top-level-menu').find('.mobile-nav__has-sublist').removeClass('mobile-nav--expanded');

      jQuery(this).closest('.mobile-nav__sublist').find('li').each(function(index) {
          jQuery(this).delay(100 * index).animate({
              opacity: 0,
              marginLeft: -20
          }, 500);
      });

      element = jQuery(this).closest('.mobile-nav--main').find('.mob-top-level-menu > .mobile-nav__has-sublist');
      customAnimateFunction(element,1,0,200);

      jQuery('.show-tags > .mobile-nav__toggle-open').closest('li').find('.mobile-nav__sublist_custom').slideUp('slow');
      
    }); 

    
    jQuery(document).on('click', '.mob-top-level-menu .mobile-nav__toggle > button', function() {
        jQuery(this).closest('.mob-top-level-menu').find('.mobile-nav__sublist.custom-submenu > li').each(function(index) {
            jQuery(this).delay(100 * index).animate({
                opacity: 1,
                marginLeft: 0
            }, 500);
        });

        element = jQuery(this).closest('.mobile-nav--main').find('.mob-top-level-menu > .mobile-nav__has-sublist');
        customAnimateFunction(element,0,-20,100);
      
    });

    jQuery(document).on('click', '.site-nav--mobile > button', function() {

        customAnimateFunction('li.mob-top-level-menu',1,0,200);
      
        element = jQuery('.mobile-nav--main').find('.mob-top-level-menu > .mobile-nav__has-sublist');
        customAnimateFunction(element,1,0,200);
      
    });


    jQuery(document).on('click','.mobile-menu--close-btn, .header-section--wrapper > #NavDrawerOverlay',function(){
      if(jQuery('.mobile-nav__has-sublist').hasClass('mobile-nav--expanded')) {
        jQuery('.mobile-nav__has-sublist').removeClass('mobile-nav--expanded');
      }

        customAnimateFunction('li.mob-top-level-menu',0,-20,100);

        element = jQuery('.mobile-nav--main').find('.mob-top-level-menu > .mobile-nav__has-sublist');
        customAnimateFunction(element,0,-20,100);

      jQuery('.show-tags > .mobile-nav__toggle-open').closest('li').find('.mobile-nav__sublist_custom').slideUp('slow');
      
    });
    
    jQuery('ul.menu-link li:first-child a').addClass('active');
    
    jQuery(".animated-link--item").hover(function(e){
        e.preventDefault();
        let data_id = jQuery(this).data('id');
        jQuery('ul.menu-link li a').removeClass('active');
        jQuery(this).addClass('active');
      
        jQuery("#"+data_id+" .collection-image").hide();
        let collection_image_id = jQuery(this).data('collection');
        if( collection_image_id ) {
          jQuery("#"+collection_image_id).css('display','flex');         
        }

        jQuery(".tags-list .products-tags-list").hide();
        let tags_list_id = jQuery(this).data('collection');
        if( tags_list_id ) {
          jQuery("#"+tags_list_id+"-tag").css('display','block');         
        }      
    });

// Remove Focus from Header
    jQuery(document).on('click','.hs-bg-slide-cart, .hs-continue-shopping, .hs-close, a.wishlist-header', function(){
      var hiddenElement = document.createElement('div');
      hiddenElement.setAttribute('tabindex', '-1'); // Make it focusable
      document.body.insertBefore(hiddenElement, document.body.firstChild);
    
      hiddenElement.focus();
      document.body.removeChild(hiddenElement);

      // Remove js-drawer-open-right class
        if (jQuery('body').hasClass('js-drawer-open-right')) {
          jQuery('body').removeClass('js-drawer-open-right');
          jQuery('body').removeClass('js-drawer-open');
        }

        if (jQuery('body').hasClass('remove-side-cart')) {
          jQuery('body').removeClass('remove-side-cart');
          jQuery('.right-drawer-vue').hide();
        }
    });

    jQuery(document).on('click','a.quick-add-button-variants', function(){
      jQuery('body').addClass('remove-side-cart');
      jQuery('.right-drawer-vue').show();
    });
    jQuery(document).on('click','ul.site-header__links a.search-button', function(){
      jQuery('.right-drawer-vue').show();
    });

// Delete Cookie to display Newsletter form
    function deleteCookie(name) {
        document.cookie = name + '=; Path=/; Expires=Thu, 01 Jan 1970 00:00:01 GMT;';
    }
    deleteCookie('__kla_id');

// Removing classes for reviews    
    function removeAllClasses() {
        jQuery('.jdgm-form__rating a').removeClass();
        jQuery('.jdgm-form__rating a').addClass('jdgm-star jdgm--off');
    }
    jQuery('a.jdgm-write-rev-link.close-form-btn, a.jdgm-btn.jdgm-cancel-rev').on('click', removeAllClasses);   

  
    jQuery('a.log-in-button').on('click', function(event){
      event.preventDefault();
      window.localStorage.removeItem('resettingPassword');
      window.location.href = window.location.origin+'/account/login';
    });

// Always Active First Tab in Mega Menus
    jQuery('#AccessibleNav .mega-menu').hover(function(){
      jQuery('.mega-menu--links .menu-collection > a').removeClass('active');
      jQuery('#collections-tags .products-tags-list').css('display','none');
  
      jQuery('.mega-menu--links .menu-collection:first-child > a').addClass('active');
      jQuery('#collections-tags .products-tags-list:first-child').css('display','block');    
      }, function(){
      jQuery('.mega-menu--links .menu-collection > a').removeClass('active');
      jQuery('#collections-tags .products-tags-list').css('display','none');    
    });    
      
  });
</script>

