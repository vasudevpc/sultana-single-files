        <div class="site-header__wrapper__left right-menu-desk">
          {% if section.settings.logo-placement == 'left' %}
            {{ header_logos }}
          {% elsif section.settings.logo-placement == 'center' and site_nav_right != blank %}
            {{ site_nav_right }}
          {% else %}
            {{ locale }}
          {% endif %}
        </div>
        
